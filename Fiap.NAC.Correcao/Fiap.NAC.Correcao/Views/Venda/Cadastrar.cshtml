@model Fiap.NAC.Correcao.Models.Venda

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Venda</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(v => v.Cliente)
        @Html.TextBoxFor(v => v.Cliente, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Data)
        @Html.TextBoxFor(v => v.Data, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Valor)
        @Html.TextBoxFor(v => v.Valor, new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

